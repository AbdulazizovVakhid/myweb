@model MyWeb.People
@{
    ViewBag.Title = "Взять кредит ";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using System.Linq;
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

